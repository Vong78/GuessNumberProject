<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/game_bg3"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_timergame"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/game_bg2"
            android:drawableTop="@drawable/timer"
            android:paddingTop="25dp"
            android:text="計時"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_roundgame"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btn_roundgame"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:drawableTop="@drawable/round"
            android:text="次數"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:paddingTop="25dp"
            android:background="@drawable/game_bg2"
            app:layout_constraintBottom_toBottomOf="@+id/btn_timergame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_timergame"
            app:layout_constraintTop_toTopOf="@+id/btn_timergame" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="請選擇遊戲挑戰模式："
            android:textColor="@color/White"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>